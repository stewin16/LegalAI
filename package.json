{
  "name": "legalai-india",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "AI-Powered Legal Assistant for Indian Law - Access 20+ AI tools for legal document drafting, case analysis, lawyer finder, and more",
  "author": "LegalAI Team",
  "license": "MIT",
  "keywords": [
    "legal AI",
    "Indian law",
    "IPC",
    "BNS",
    "legal assistant",
    "document drafter",
    "case predictor",
    "lawyer finder"
  ],
  "homepage": "https://legalai.in",
  "repository": {
    "type": "git",
    "url": "https://github.com/legalai/legalai-india"
  },
  "scripts": {
    "dev": "vite",
    "dev:client": "vite",
    "dev:server": "cd server && npm run dev",
    "dev:rag": "cd rag_service && python -m uvicorn main:app --reload --port 8000",
    "dev:all": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:rag\"",
    "build": "tsc -b && vite build",
    "build:analyze": "vite build --mode production && npx vite-bundle-visualizer",
    "preview": "vite preview",
    "preview:host": "vite preview --host",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist node_modules/.vite",
    "prepare": "echo 'Ready for deployment'"
  },
